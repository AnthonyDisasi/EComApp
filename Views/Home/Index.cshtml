@model ArticleDisplayModel
@{
}

<div class="my-2">
    <form asp-action="Index" class="row row-cols-lg-auto g-3 align-items-center">
        <div class="col-12">
            <label class="visually-hidden" for="categoryId">Categories</label>
            <select class="form-select" id="categoryId" name="categoryId">
            <option selected>Category</option>
            @foreach(var category in Model.Categories)
            {
                <option selected="@(category.Id == Model.CategoryId)" value="@category.Id">@category.CategoryName</option>
            }

        </select>
        </div>

        <div class="col-12">
            <label class="visually-hidden" for="sterm">Search by title</label>
            <div class="input-group">
                <div class="input-group-text"></div>
                <input type="text" class="form-control" value="@Model.STerm" id="sterm" name="sterm" placeholder="Search by title">
            </div>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Search</button>
            <a href="/Home/Index" type="reset" class="btn btn-dark">Reset</a>
        </div>
    </form>
</div>

<div class="w-100 mt-4 d-flex flex-wrap">
    @foreach (var article in Model.Articles)
    {
        <div class="card mx-2 mb-4" style="width: 16rem;">
            <img src="https://picsum.photos/200/200" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@article.ArticleName</h5>
                <p>
                <strong class="card-text">
                    Price: @article.Price $
                    </strong><br />
                    <b>Category: </b> @article.CategoryName <br />
                    <b>Description: </b> @article.Description 
                </p>
                <a href="#" class="btn btn-primary">Add to cart</a>
            </div>
        </div>
    }
</div>
